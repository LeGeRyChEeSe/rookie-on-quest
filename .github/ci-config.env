# CI/CD Configuration Variables
# These values are used across different workflows to ensure consistency.

# Performance target in seconds for PR Validation (5 minutes)
BUILD_TARGET_SECONDS_PR=300

# Performance target in seconds for Release builds (10 minutes)
BUILD_TARGET_SECONDS_RELEASE=600

# Timeout in minutes for instrumented tests (Nexus 6 emulator)
TIMEOUT_INSTRUMENTED_TESTS=10

# Timeout in minutes for release builds
TIMEOUT_RELEASE_BUILD=20
